    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug chain setup",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "main"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "cwd": "${workspaceFolder}/apps/api/test/setup"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Worker (NestJS via ts-node)",
            "args": [
                "${workspaceFolder}/apps/worker/src/main.ts"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Api (NestJS via ts-node)",
            "args": [
                "${workspaceFolder}/apps/api/src/main.ts"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to API Service",
            "port": 9229,
            "restart": true
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Worker",
            "port": 9230,
            "restart": true
        }
    ]
}
